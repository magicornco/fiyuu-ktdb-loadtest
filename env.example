# Fiyuu KTDB Web Server Environment Configuration

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database Configuration
DB_TYPE=mssql                    # SQL Server only
DB_HOST=localhost
DB_PORT=1433                     # SQL Server default port
DB_USERNAME=sa
DB_PASSWORD=your_password_here   # Required
DB_NAME=master                   # Database name
DB_SSL_MODE=disable              # disable, require, verify-ca, verify-full

# Connection Pool Settings
DB_MAX_OPEN_CONNS=10000
DB_MAX_IDLE_CONNS=100
DB_CONN_MAX_LIFETIME=1h
DB_CONN_MAX_IDLE_TIME=10m

# Connection Count for Load Testing
CONNECTION_COUNT=10000

# Query Configuration
DEFAULT_QUERY=SELECT 1 as test, GETDATE() as current_time

# Logging Configuration
LOG_LEVEL=info                   # debug, info, warn, error
LOG_FORMAT=text                  # text, json
